/**index.wxss**/
.movieLists{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #1296db;
}
.img{
  flex: 1;
  padding: 20rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.content{
  flex: 3;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}
.content .title{
  font-weight: bold;
  font-size: 30rpx;
}
.content .date{
  margin-top: 20rpx;
}
.content .date,.content .name{
  color: #ccc;
  font-size: 25rpx;
}
.score{
  flex: 1;
  color: orangered;
  text-align: right;
  font-weight: bold;
  padding: 20rpx 20rpx 20rpx 0;
}